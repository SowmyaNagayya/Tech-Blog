<div class="card entry-card col-10">
    <div class="card-body">
        <h5 id="post-id" class="hidden-id">{{id}}</h5>
        <h5 class="card-title post-card-title">{{title}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">Posted by {{user.username}}</h6>
        <p class="card-text">{{content}}</p>
    </div>
</div>    

{{#each comments as |comment|}}
<div class="card entry-card col-10">
    <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">Comment by {{comment.user.username}}</h6>
        <p class="card-text">{{comment.body}}</p>
    </div>
</div>     
{{/each}}       

<form class= "col-10 comment-submit-form">
    <div class="form-group">
        <label for="formGroupExampleInput2">Add A Comment</label>
        <input type="text" class="form-control" id="new-comment-text" placeholder="Type comment Here">
    </div>
    <div>
        <button id="comment-submit-button" type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

<script src="/js/comment.js"></script>