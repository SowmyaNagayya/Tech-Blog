{{#each posts as |post|}}
    <div class="card post-card col-10">
        <div class="card-body">
             <h5 class="card-title post-card-title"><a href="/posts/{{post.id}}">{{post.title}}</a></h5>
             <p class="card-text">{{post.content}}</p>
             <h6 class="card-subtitle mb-2 text-muted">Posted by {{post.user.username}}</h56>        
        </div>
    </div>
{{/each}}